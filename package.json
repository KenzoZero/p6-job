{
  "name": "picosix",
  "version": "0.0.1",
  "description": "Picosix platform",
  "main": "dist/index",
  "author": "Tuan Nguyen <picosix.com@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "node dist/server.js",
    "build": "yarn build-ts && yarn tslint && yarn copy-graphql",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "copy-graphql": "ts-node copyGraphql.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.0",
    "@types/graphql": "^0.11.7",
    "@types/shelljs": "^0.7.7",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.10",
    "prettier": "^1.10.1",
    "shelljs": "^0.7.8",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-import": "^0.3.1",
    "graphql-tools": "^2.18.0"
  }
}
