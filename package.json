{
  "name": "p6-job",
  "version": "0.0.1",
  "description": "Don't just build a to do project, build a real-work project",
  "main": "dist/index",
  "author": "Tuan Nguyen <picosix.com@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "node dist/server.js",
    "build": "yarn build-ts && yarn tslint",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "seed": "ts-node"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.19",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.0",
    "@types/graphql": "^0.11.7",
    "@types/mongoose": "^4.7.32",
    "@types/morgan": "^1.7.35",
    "@types/shelljs": "^0.7.7",
    "concurrently": "^3.5.1",
    "faker": "^4.1.0",
    "nodemon": "^1.14.10",
    "prettier": "^1.10.1",
    "shelljs": "^0.7.8",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-import": "^0.3.1",
    "graphql-tools": "^2.18.0",
    "mongoose": "^4.13.9",
    "morgan": "^1.9.0"
  }
}
